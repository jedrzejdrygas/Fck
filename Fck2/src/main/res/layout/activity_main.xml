<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yenjay.android.fck.MainActivity"
    android:background="@android:color/black">

    <Button
        android:id="@+id/kurwaButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/welcome_message"
        android:textAlignment="center"
        android:background="@android:color/black"
        android:onClick="onButtonClick"
        android:textSize="70sp"
        android:textStyle="bold"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9">
        <ImageButton
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="vibrationClick"
            android:src="@drawable/vibrateicon"
            android:background="@android:color/black"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:background="@android:color/black"
            android:onClick="onButtonClick"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@android:color/black"
            android:src="@drawable/shareicon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:onClick="shareButtonClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:background="@android:color/black"
            android:onClick="onButtonClick"/>
        <ImageButton
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="restartClick"
            android:src="@drawable/restarticon"
            android:background="@android:color/black"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>
